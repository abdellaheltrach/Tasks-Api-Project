{
  "openapi": "3.0.1",
  "info": {
    "title": "LoginApp.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/auth/me": {
      "get": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
